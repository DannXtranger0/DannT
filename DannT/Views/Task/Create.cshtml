@{
    ViewData["css"] = "CreateCss.css";
}
<section>
   <form class="wrapper">
        <h1>Create Task</h1>

       <div class="input-wrapper">
            <div class="input-container">
                <label for="Title">Title</label>
                <input type="text" placeholder="Title" name="Title" class="input-text" />
            </div>
            <div class="input-container">
                <label for="Deadline">Deadline</label>
                <input type="Date" placeholder="05/05/2005" name="Deadline" class="input-text" />
            </div>
       </div>


        <div class="input-wrapper">
            <div class="input-container">
                <label for="Description">Description</label>
                <textarea id="Description" name="Description" placeholder="Description" class="input-text"></textarea>
            </div>

                <div class="input-container">
                    
                <label for="TagId">Tag</label>
                <select id="TagId" name="TagId" class="input-select">
                    <option value="0">Select A Tag</option>
                </select>
            </div>
        </div>


            <button type="submit" class="button button-blue btn-create">Create Task</button>
    </form>
</section>

<script src="~/js/Pages/CreateTaskPage.js" type="module"></script>