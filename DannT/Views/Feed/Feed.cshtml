@{
    ViewData["css"] = "FeedCss.css";
}
<section>
    <form>
        <div class="header-container">
                <input class="input-text" placeholder="Search Task By  Title or Description" name="InputSearch" id="InputSearch" />
                
                <div class="cb-wrapper">

                    <div  class="cb-container">
                        <label for="CbCompleted">Completed</label>
                        <input type="checkbox" id="CbCompleted" name="CbCompleted" class="cb-search" />
                    </div>
                    <div class="cb-container">
                        <label for="CbPending">Incompleted</label>
                    <input type="checkbox" id="CbPending" name="CbPending" class="cb-search" />
                    </div>
                </div>

                <select id="TagId" class="input-select">
                    <option value="0">All Tags</option>
                </select>
            <a class="button button-blue" asp-controller="Task" asp-action="Create" id="btnCreateTask">Create Task</a>
        </div>
    </form>
</section>

<section class="table-container">
    <table>
        <tbody>
            <tr class="table-headers">
                <th>Status</th>
                <th>Task</th>
                <th>Tag</th>
                <th>Deadline</th>
                <th>Action</th>
            </tr>
        </tbody>

    </table>
</section>

<script src="~/js/Pages/FeedPage.js" type="module"></script>

